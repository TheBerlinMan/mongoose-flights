<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <form id="edit-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">

    <label for="airline-input">Airline</label>
    <select name="airline" id="airline-select" value="<%= flight.airline %>">

      <option value="<%= flight.airline %>"><%= flight.airline %></option>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
    
    <label for="airport-year-input">Airport</label>
    <select name="airport" id="airport" value="<%= flight.airport %>">

      <option value="<%= flight.airport %>"><%= flight.airport %></option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>

    <label for="flightNo-input">Flight #</label>
    <input type="number" name="flightNo" id="flightNo-input" value="<%= flight.flightNo %>">

    <label for="departs-input">Departs</label>
    <input type="date" name="departs" id="departs-input" value="<%= flight.departs %>">

    <button type="submit">Save Changes</button>

  </form>
</main>

<%- include("../partials/footer") %>